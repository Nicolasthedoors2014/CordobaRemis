<div class=" col-md-offset-3" >

  <h2 class ="white">Registrate como pasajero</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field white" >
      <%= f.label :nombre %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field white">
      <%= f.label :telefono %><br />
      <%= f.phone_field :phone, autofocus: true %>
    </div>

    <div class="field white">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field white">
      <%= f.label :contraseña %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracters minimo)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field white">
      <%= f.label :confirmación_de_contraseña %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Registrar", class:" btn" %>
    </div>
  <% end %>

  <%= render "passengers/shared/links" %>
</div>
