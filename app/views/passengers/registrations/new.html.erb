<div class="container d-flex justify-content-center align-items-start form_pass" >
  <p class=""><%= notice %></p>
  <p class=""><%= alert %></p>
  <div class=" container ">
    <h2>Registrate como pasajero</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group" >
        <%= f.label :nombre %><br />
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :telefono %><br />
        <%= f.phone_field :phone, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :contraseña %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracters minimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.label :confirmación_de_contraseña %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>


        <%= f.submit "Registrar", class:"btn btn-primary" %>

    <% end %>

    <%= render "passengers/shared/links" %>
  </div>
</div>
