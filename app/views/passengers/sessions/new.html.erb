<div class="container-fluid d-flex justify-content-center  align-items-center ja flex-column" >
  <h2>Inicia sesión</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field white">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :contraseña %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="field ">
        <%= f.check_box :remember_me %>
        <%= f.label :recordar %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Iniciar sesión", class:" btn" %>
    </div>
  <% end %>

  <%= render "passengers/shared/links" %>

</div>
